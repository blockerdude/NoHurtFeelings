<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <TextView
        android:id="@+id/eql_introdution_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/eql_introduction"
        android:textSize="24sp" />
    
    <TextView
        android:id="@+id/question_list_name_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eql_introdution_TextView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="24sp" />

    <ScrollView
        android:id="@+id/questions_ScrollView"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@+id/question_list_name_TextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" >

        <LinearLayout
            android:id="@+id/questions_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
